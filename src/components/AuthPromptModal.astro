---
import { Headphones, Trophy, TrendingUp, Sparkles, X, ChevronRight, UserPlus } from 'lucide-astro';
---

<div id="auth-prompt-modal" class="auth-prompt-backdrop" style="display: none;" aria-hidden="true">
    <div class="auth-prompt-wrapper">
        <div class="glass-panel auth-prompt-content">
            <button id="close-auth-prompt" class="close-modal-btn" aria-label="Cerrar">
                <X size={20} />
            </button>
            
            <div class="prompt-visual">
                <div class="visual-glow"></div>
                <div class="visual-icon-container">
                    <Sparkles class="sparkle-icon" size={48} />
                </div>
                <div class="visual-blobs">
                    <div class="blob blob-1"></div>
                    <div class="blob blob-2"></div>
                </div>
            </div>

            <div class="prompt-text">
                <div class="prompt-header">
                    <span class="badge">Estatus de Oyente</span>
                    <h3>¡Lleva tu experiencia al siguiente nivel!</h3>
                </div>
                
                <p class="prompt-message">
                    Únete a la comunidad de <strong>Veredillas FM</strong> para desbloquear funciones exclusivas y seguir tu progreso.
                </p>
                
                <div class="benefits-grid">
                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <Headphones size={20} strokeWidth={2.5} />
                        </div>
                        <div class="benefit-info">
                            <h4>Biblioteca Personal</h4>
                            <p>Guarda tus episodios favoritos.</p>
                        </div>
                    </div>
                    
                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <Trophy size={20} strokeWidth={2.5} />
                        </div>
                        <div class="benefit-info">
                            <h4>Logros y Rangos</h4>
                            <p>Gana insignias por escuchar.</p>
                        </div>
                    </div>
                    
                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <TrendingUp size={20} strokeWidth={2.5} />
                        </div>
                        <div class="benefit-info">
                            <h4>Estadísticas</h4>
                            <p>Analiza tus hábitos de escucha.</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="prompt-actions">
                <a href="/login" class="btn-primary-glow">
                    <span>Crear mi cuenta gratis</span>
                    <ChevronRight size={18} />
                </a>
                <button id="dismiss-auth-prompt" class="btn-secondary">
                    Continuar como invitado
                </button>
            </div>
            
            <div class="modal-footer">
                <p>¿Ya tienes cuenta? <a href="/login">Inicia sesión</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-prompt-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(3, 3, 5, 0.75);
        backdrop-filter: blur(12px);
        z-index: 20000;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        opacity: 0;
        transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .auth-prompt-backdrop.visible {
        opacity: 1;
    }

    .auth-prompt-wrapper {
        width: 100%;
        max-width: 520px;
        perspective: 1000px;
    }

    .auth-prompt-content {
        background: rgba(13, 13, 18, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0;
        border-radius: 2rem;
        position: relative;
        overflow: hidden;
        transform: translateY(40px) rotateX(-5deg);
        transition: transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
        box-shadow: 
            0 25px 50px -12px rgba(0, 0, 0, 0.7),
            0 0 0 1px rgba(255, 255, 255, 0.05),
            inset 0 0 80px rgba(139, 92, 246, 0.05);
        max-height: calc(100vh - 2rem);
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--color-primary) transparent;
    }

    .auth-prompt-content::-webkit-scrollbar {
        width: 4px;
    }

    .auth-prompt-content::-webkit-scrollbar-thumb {
        background: var(--color-primary);
        border-radius: 10px;
    }

    .auth-prompt-backdrop.visible .auth-prompt-content {
        transform: translateY(0) rotateX(0);
    }

    .close-modal-btn {
        position: absolute;
        top: 1.25rem;
        right: 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--color-text-muted);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s;
        z-index: 20;
    }
    
    .close-modal-btn:hover { 
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444; 
        border-color: rgba(239, 68, 68, 0.2);
        transform: rotate(90deg);
    }

    /* Visual Section */
    .prompt-visual {
        height: 140px;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(236, 72, 153, 0.2));
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .visual-glow {
        position: absolute;
        width: 150px;
        height: 150px;
        background: radial-gradient(circle, rgba(139, 92, 246, 0.5) 0%, transparent 70%);
        filter: blur(20px);
        animation: pulse-glow 4s ease-in-out infinite;
    }

    .visual-icon-container {
        position: relative;
        z-index: 2;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        width: 80px;
        height: 80px;
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        transform: rotate(-5deg);
        animation: float-icon 6s ease-in-out infinite;
    }

    .sparkle-icon {
        color: #fff;
        filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.8));
    }

    .blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(40px);
        z-index: 1;
    }

    .blob-1 {
        width: 120px;
        height: 120px;
        background: var(--color-primary);
        top: -20px;
        left: -20px;
        opacity: 0.3;
    }

    .blob-2 {
        width: 100px;
        height: 100px;
        background: var(--color-accent);
        bottom: -20px;
        right: -20px;
        opacity: 0.3;
    }

    @keyframes pulse-glow {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.2); opacity: 0.8; }
    }

    @keyframes float-icon {
        0%, 100% { transform: translateY(0) rotate(-5deg); }
        50% { transform: translateY(-10px) rotate(5deg); }
    }

    /* Text Content */
    .prompt-text {
        padding: 2rem 2.5rem 1.5rem;
        text-align: center;
    }

    .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: rgba(139, 92, 246, 0.15);
        color: #a78bfa;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
        border: 1px solid rgba(139, 92, 246, 0.2);
    }

    .prompt-header h3 {
        font-size: 1.5rem;
        line-height: 1.2;
        margin: 0 0 1rem 0;
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, #d1d5db 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .prompt-message {
        color: var(--color-text-dim);
        margin-bottom: 2rem;
        line-height: 1.6;
        font-size: 0.95rem;
    }

    .prompt-message strong {
        color: #fff;
        font-weight: 600;
    }

    /* Benefits Grid */
    .benefits-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
        text-align: left;
        margin-bottom: 1rem;
    }

    .benefit-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        background: rgba(255, 255, 255, 0.03);
        padding: 1rem;
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .benefit-item:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.1);
        transform: translateX(4px);
    }

    .benefit-icon {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(139, 92, 246, 0.1));
        color: #a78bfa;
        width: 42px;
        height: 42px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        border: 1px solid rgba(139, 92, 246, 0.1);
    }

    .benefit-info h4 {
        margin: 0;
        font-size: 0.9rem;
        font-weight: 700;
        color: #fff;
    }

    .benefit-info p {
        margin: 2px 0 0;
        font-size: 0.8rem;
        color: var(--color-text-muted);
    }

    /* Actions */
    .prompt-actions {
        padding: 0 2.5rem 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-primary-glow {
        background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
        color: white !important;
        text-decoration: none;
        padding: 1.1rem;
        border-radius: 1.25rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        box-shadow: 0 10px 25px -5px rgba(139, 92, 246, 0.5);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }
    
    .btn-primary-glow::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transform: translateX(-100%);
        transition: transform 0.6s;
    }

    .btn-primary-glow:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px -5px rgba(139, 92, 246, 0.6);
        filter: brightness(1.1);
    }

    .btn-primary-glow:hover::after {
        transform: translateX(100%);
    }

    .btn-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--color-text-muted);
        padding: 0.9rem;
        border-radius: 1.25rem;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.08);
        color: #fff;
        border-color: rgba(255, 255, 255, 0.2);
    }

    .modal-footer {
        padding: 1rem 2.5rem 2rem;
        text-align: center;
        font-size: 0.85rem;
        color: var(--color-text-muted);
    }

    .modal-footer p { margin: 0; }

    .modal-footer a {
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 800;
        margin-left: 4px;
        transition: color 0.2s;
    }

    .modal-footer a:hover {
        color: var(--color-accent);
        text-decoration: underline;
    }

    @media (max-width: 480px) {
        .auth-prompt-backdrop {
            padding: 0.5rem;
        }

        .auth-prompt-content {
            border-radius: 1.5rem;
            max-height: calc(100vh - 1rem);
        }

        .prompt-visual {
            height: 100px;
        }

        .visual-icon-container {
            width: 60px;
            height: 60px;
        }

        .visual-icon-container :global(svg) {
            width: 32px;
            height: 32px;
        }

        .prompt-text {
            padding: 1.25rem 1.25rem 0.75rem;
        }
        
        .prompt-header h3 {
            font-size: 1.25rem;
        }

        .prompt-message {
            margin-bottom: 1.25rem;
            font-size: 0.9rem;
        }

        .benefits-grid {
            gap: 0.5rem;
        }

        .prompt-actions {
            padding: 0 1.25rem 0.75rem;
        }

        .btn-primary-glow {
            padding: 0.9rem;
        }

        .modal-footer {
            padding: 0.75rem 1.25rem 1.25rem;
        }

        .benefit-item {
            padding: 0.75rem;
        }

        .benefit-icon {
            width: 34px;
            height: 34px;
        }

        .benefit-icon :global(svg) {
            width: 16px;
            height: 16px;
        }
    }

    /* Support for very short screens */
    @media (max-height: 600px) {
        .prompt-visual {
            display: none;
        }
        .auth-prompt-content {
            border-top: 4px solid var(--color-primary);
        }
    }

</style>

<script>
    const SHOW_DELAY = 45000; // Increased to 45s to be less annoying
    const STORAGE_KEY = 'veredillas_auth_prompt_dismissed_v2'; // New version for new modal
    const VIEW_COUNT_KEY = 'veredillas_auth_prompt_views';

    function isUserLoggedIn() {
        return document.cookie.includes('user-session') || 
               localStorage.getItem('user-session') !== null ||
               (window as any).currentUser !== undefined;
    }

    function initAuthPrompt() {
        // Prevent showing if already logged in
        if (isUserLoggedIn()) return;

        // Check if user dismissed it globally for a while
        const lastDismissed = localStorage.getItem(STORAGE_KEY);
        if (lastDismissed) {
            const timeSinceDismissal = Date.now() - parseInt(lastDismissed);
            const ONE_WEEK = 7 * 24 * 60 * 60 * 1000;
            if (timeSinceDismissal < ONE_WEEK) return;
        }

        // Session check to not show multiple times in same session
        if (sessionStorage.getItem(STORAGE_KEY)) return;

        // Prevent multiple timeouts
        if ((window as any).authPromptTimeout) clearTimeout((window as any).authPromptTimeout);

        (window as any).authPromptTimeout = setTimeout(() => {
            showPrompt();
        }, SHOW_DELAY);
    }
    
    function showPrompt() {
        const modal = document.getElementById('auth-prompt-modal');
        if (modal && !isUserLoggedIn() && !sessionStorage.getItem(STORAGE_KEY)) {
            modal.style.display = 'flex';
            // Trigger reflow
            modal.offsetHeight; 
            modal.classList.add('visible');
            
            // Track views
            const views = parseInt(localStorage.getItem(VIEW_COUNT_KEY) || '0') + 1;
            localStorage.setItem(VIEW_COUNT_KEY, views.toString());
        }
    }

    function dismissPrompt(permanent = false) {
        const modal = document.getElementById('auth-prompt-modal');
        if (modal) {
            modal.classList.remove('visible');
            setTimeout(() => {
                modal.style.display = 'none';
            }, 600);
            
            sessionStorage.setItem(STORAGE_KEY, 'true');
            
            if (permanent) {
                // If they close via "Quizás luego" or "X", we wait a week
                localStorage.setItem(STORAGE_KEY, Date.now().toString());
            }
        }
    }

    // Initialize on load and page changes
    document.addEventListener('astro:page-load', initAuthPrompt);
    document.addEventListener('DOMContentLoaded', initAuthPrompt);

    // Event Delegation
    document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        const closeBtn = target.closest('#close-auth-prompt');
        const dismissBtn = target.closest('#dismiss-auth-prompt');
        
        if (closeBtn || dismissBtn) {
            dismissPrompt(true); // Permanent dismissal for a week
        }
        
        if (target.id === 'auth-prompt-modal') {
             dismissPrompt(false); // Just session dismissal if they click outside
        }
    });

    // Expose functionality to other components
    (window as any).triggerAuthPrompt = () => {
        if (!isUserLoggedIn()) {
            showPrompt();
        }
    };
</script>
