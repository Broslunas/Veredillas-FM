---
interface Props {
  title: string;
  id?: string;
  isOpen?: boolean;
  class?: string;
  extraHeader?: string; // HTML string for extra buttons if really needed
}

const { title, id, isOpen = true, class: className = "" } = Astro.props;
---

<div class:list={["sidebar-widget-collapsible", className]} id={id} data-is-open={isOpen ? "true" : "false"}>
  <div class="widget-header">
      <h3>{title}</h3>
      <div class="header-actions">
           <slot name="header-actions" />
           <button class="toggle-btn" aria-label="Colapsar/Expandir">
             <svg class="chevron-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
           </button>
      </div>
  </div>
  
  <div class="widget-content">
      <slot />
  </div>
</div>

<script>
    // Simple script to handle all collapsible widgets
    document.addEventListener('DOMContentLoaded', () => {
        const widgets = document.querySelectorAll('.sidebar-widget-collapsible');
        
        widgets.forEach(widget => {
            const btn = widget.querySelector('.toggle-btn');
            const content = widget.querySelector('.widget-content') as HTMLElement;
            
            if(btn && content) {
                btn.addEventListener('click', () => {
                    const isOpen = widget.getAttribute('data-is-open') === 'true';
                    
                    if(isOpen) {
                        widget.setAttribute('data-is-open', 'false');
                        // Collapse
                    } else {
                        widget.setAttribute('data-is-open', 'true');
                        // Expand
                    }
                });
            }
        });
    });
</script>

<style>
  .sidebar-widget-collapsible {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    margin-bottom: var(--spacing-lg);
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .widget-header {
      padding: var(--spacing-md) var(--spacing-lg);
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(255,255,255,0.02);
      border-bottom: 1px solid transparent;
      transition: border-color 0.3s;
  }
  
  .sidebar-widget-collapsible[data-is-open="true"] .widget-header {
      border-bottom-color: rgba(255,255,255,0.05);
  }

  h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--color-text-heading);
    font-weight: 700;
  }
  
  .header-actions {
      display: flex;
      align-items: center;
      gap: 8px;
  }

  .toggle-btn {
      background: transparent;
      border: none;
      color: var(--color-text-muted);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 4px;
      border-radius: 4px;
      transition: all 0.2s;
  }
  
  .toggle-btn:hover {
      background: rgba(255,255,255,0.05);
      color: white;
  }
  
  .chevron-icon {
      transition: transform 0.3s ease;
  }
  
  /* Rotation logic */
  .sidebar-widget-collapsible[data-is-open="false"] .chevron-icon {
      transform: rotate(-90deg);
  }
  
  .widget-content {
      padding: var(--spacing-lg);
      transition: all 0.3s ease;
      display: block;
  }
  
  .sidebar-widget-collapsible[data-is-open="false"] .widget-content {
      display: none;
      padding: 0;
  }
</style>
