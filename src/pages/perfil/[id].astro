---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import mongoose from 'mongoose';
import User, { type IUser } from '../../models/User';
import UserAchievement from '../../models/UserAchievement';
import { ACHIEVEMENTS, RARITY_COLORS, RARITY_LABELS, CATEGORY_LABELS } from '../../lib/achievements';
import { getLevel, getNextLevel, getProgressToNextLevel } from '../../lib/gamification';
import { getUserFromCookie } from '../../lib/auth';

export const prerender = false;

const { id } = Astro.params;

if (!id || !mongoose.Types.ObjectId.isValid(id)) {
  return Astro.redirect('/404');
}

// Connect to MongoDB
let user: IUser | null = null;
let unlockedAchievements: any[] = [];
let totalPoints = 0;

try {
  if (mongoose.connection.readyState !== 1) {
    const MONGODB_URI = import.meta.env.MONGODB_URI;
    if (MONGODB_URI) await mongoose.connect(MONGODB_URI);
  }

  user = await User.findById(id).select(
    'name picture bio favorites likedClips listeningTime completedEpisodes createdAt role'
  );

  if (user) {
    const storedUnlocks = await UserAchievement.find({ userId: user._id });
    const unlockedIds = new Set(storedUnlocks.map((u: { achievementId: string }) => u.achievementId));
    const unlockedAtMap = new Map(storedUnlocks.map((u: { achievementId: string; unlockedAt: Date }) => [u.achievementId, u.unlockedAt]));

    totalPoints = ACHIEVEMENTS.reduce((sum, a) => unlockedIds.has(a.id) ? sum + a.points : sum, 0);
    unlockedAchievements = ACHIEVEMENTS
      .filter(a => unlockedIds.has(a.id))
      .map(a => ({
        ...a,
        rarityColor: RARITY_COLORS[a.rarity],
        rarityLabel: RARITY_LABELS[a.rarity],
        categoryLabel: CATEGORY_LABELS[a.category],
        unlockedAt: unlockedAtMap.get(a.id) ?? null,
      }))
      .sort((a, b) => {
        const order: Record<string, number> = { legendary: 0, epic: 1, rare: 2, uncommon: 3, common: 4 };
        return order[a.rarity] - order[b.rarity];
      });
  }
} catch (err) {
  console.error('[perfil/[id]]', err);
}

if (!user) {
  return Astro.redirect('/404');
}

// Check if visitor is the owner
const cookieHeader = Astro.request.headers.get('cookie');
const visitorPayload = getUserFromCookie(cookieHeader);
const isOwner = visitorPayload?.userId === id;

// Gamification
const listeningTime = user.listeningTime || 0;
const currentLevel = getLevel(listeningTime);
const nextLevel = getNextLevel(listeningTime);
const progress = getProgressToNextLevel(listeningTime);

// Format time
function formatTime(seconds: number): string {
  const h = Math.floor(seconds / 3600);
  const m = Math.floor((seconds % 3600) / 60);
  if (h > 0) return `${h}h ${m}m`;
  return `${m}m`;
}

// Member since
const createdDate = new Date(user.createdAt).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const daysSinceJoin = Math.floor(
  (Date.now() - new Date(user.createdAt).getTime()) / (1000 * 60 * 60 * 24)
);

// Favorites episodes data
const allEpisodes = await getCollection('episodios');
const favoriteSlugs: string[] = user.favorites || [];
const favoriteEpisodes = allEpisodes
  .filter(ep => favoriteSlugs.includes(ep.slug))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 6);

// Liked Clips (just IDs, displayed as YouTube embeds)
const likedClipIds: string[] = (user.likedClips || []).slice(0, 6);

// Stats
const completedCount = (user.completedEpisodes || []).length;
const favCount = favoriteSlugs.length;
const likedClipsCount = (user.likedClips || []).length;

// Role badge
const ROLE_BADGES: Record<string, { label: string; color: string; icon: string }> = {
  owner:  { label: 'Creador',   color: '#f59e0b', icon: 'üëë' },
  admin:  { label: 'Admin',     color: '#ec4899', icon: 'üõ°Ô∏è' },
  user:   { label: 'Oyente',    color: '#8b5cf6', icon: 'üéß' },
};
const roleBadge = ROLE_BADGES[user.role] || ROLE_BADGES['user'];

// OG image
const ogDescription = user.bio
  ? `${user.bio.slice(0, 120)}‚Ä¶ - Perfil en Veredillas FM`
  : `Descubre el perfil de ${user.name} en Veredillas FM: ${unlockedAchievements.length} logros, ${favCount} favoritos.`;
---

<Layout
  title={`Perfil de ${user.name}`}
  description={ogDescription}
  image={user.picture || '/logo.png'}
  type="profile"
>
  <!-- Ambient BG -->
  <div class="pub-bg" aria-hidden="true">
    <div class="pub-orb pub-orb-1"></div>
    <div class="pub-orb pub-orb-2"></div>
    <div class="pub-orb pub-orb-3"></div>
    <div class="pub-grid"></div>
  </div>

  <div class="pub-page">

    <!-- ‚îÄ‚îÄ HERO BANNER ‚îÄ‚îÄ -->
    <header class="hero-banner">
      <div class="hero-left">
        <div class="avatar-ring" style={`--level-color: ${currentLevel.color}`}>
          {user.picture
            ? <img src={user.picture} alt={user.name} class="avatar-img" />
            : <div class="avatar-placeholder" style={`background: ${currentLevel.color}`}>{user.name.charAt(0).toUpperCase()}</div>
          }
          <div class="level-badge" style={`background: ${currentLevel.color}`} title={currentLevel.name}>
            <span>{currentLevel.icon}</span>
          </div>
        </div>

        <div class="hero-info">
          <div class="hero-name-row">
            <h1 class="hero-name">{user.name}</h1>
            <span class="role-badge" style={`color: ${roleBadge.color}; border-color: ${roleBadge.color}30; background: ${roleBadge.color}15`}>
              {roleBadge.icon} {roleBadge.label}
            </span>
          </div>
          <p class="hero-level" style={`color: ${currentLevel.color}`}>{currentLevel.name} ¬∑ {currentLevel.description}</p>
          {user.bio && <p class="hero-bio">{user.bio}</p>}
          <p class="hero-joined">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
            Miembro desde {createdDate}
          </p>
        </div>
      </div>

      <!-- Quick stats -->
      <div class="hero-stats-bar">
        <div class="qs">
          <span class="qs-value">{formatTime(listeningTime)}</span>
          <span class="qs-label">Escuchado</span>
        </div>
        <div class="qs-sep"></div>
        <div class="qs">
          <span class="qs-value">{completedCount}</span>
          <span class="qs-label">Episodios</span>
        </div>
        <div class="qs-sep"></div>
        <div class="qs">
          <span class="qs-value">{favCount}</span>
          <span class="qs-label">Favoritos</span>
        </div>
        <div class="qs-sep"></div>
        <div class="qs">
          <span class="qs-value qs-gold">{totalPoints}</span>
          <span class="qs-label">Puntos ‚≠ê</span>
        </div>
        <div class="qs-sep"></div>
        <div class="qs">
          <span class="qs-value">{daysSinceJoin}</span>
          <span class="qs-label">D√≠as</span>
        </div>
      </div>

      <!-- Level progress bar -->
      <div class="level-progress-wrap">
        <div class="level-progress-labels">
          <span>Nivel: <strong>{currentLevel.name}</strong></span>
          {nextLevel
            ? <span>Siguiente: <strong style={`color:${nextLevel.color}`}>{nextLevel.icon} {nextLevel.name}</strong></span>
            : <span class="level-max">üèÜ Nivel m√°ximo</span>
          }
        </div>
        <div class="level-bar-track">
          <div class="level-bar-fill" style={`width:${progress}%; background:${currentLevel.color}`}></div>
          <div class="level-bar-glow" style={`left:${progress}%; background:${currentLevel.color}`}></div>
        </div>
        <div class="level-pct">{Math.floor(progress)}% al siguiente nivel</div>
      </div>

      {isOwner && (
        <a href="/perfil" class="edit-profile-btn">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
          Editar mi perfil
        </a>
      )}
    </header>

    <!-- ‚îÄ‚îÄ CONTENT GRID ‚îÄ‚îÄ -->
    <div class="content-grid">

      <!-- ‚îÄ‚îÄ ACHIEVEMENTS WIDGET ‚îÄ‚îÄ -->
      <section class="glass-card achievements-card" id="logros">
        <div class="card-header">
          <div class="card-title-group">
            <span class="card-icon">üèÖ</span>
            <h2>Logros</h2>
          </div>
          <div class="card-badge">{unlockedAchievements.length} / {ACHIEVEMENTS.filter(a => !a.secret).length + unlockedAchievements.filter(a => a.secret).length}</div>
        </div>

        {unlockedAchievements.length === 0 ? (
          <div class="empty-state">
            <span class="empty-icon">üîí</span>
            <p>Este usuario a√∫n no ha desbloqueado logros</p>
          </div>
        ) : (
          <div class="achievements-grid">
            {unlockedAchievements.map((ach) => (
              <button
                class="ach-chip"
                style={`--ach-color: ${ach.rarityColor}`}
                data-ach={JSON.stringify(ach)}
              >
                <span class="ach-icon">{ach.icon}</span>
                <div class="ach-text">
                  <span class="ach-name">{ach.name}</span>
                  <span class="ach-rarity" style={`color:${ach.rarityColor}`}>{ach.rarityLabel}</span>
                </div>
                {ach.points > 0 && <span class="ach-pts">+{ach.points}</span>}
              </button>
            ))}
          </div>
        )}
      </section>

      <!-- ‚îÄ‚îÄ FAVORITES WIDGET ‚îÄ‚îÄ -->
      <section class="glass-card favorites-card" id="favoritos">
        <div class="card-header">
          <div class="card-title-group">
            <span class="card-icon">‚ù§Ô∏è</span>
            <h2>Episodios Favoritos</h2>
          </div>
          <div class="card-badge">{favCount}</div>
        </div>

        {favoriteEpisodes.length === 0 ? (
          <div class="empty-state">
            <span class="empty-icon">üíî</span>
            <p>Sin favoritos a√∫n</p>
          </div>
        ) : (
          <div class="fav-list">
            {favoriteEpisodes.map((ep) => (
              <a href={`/ep/${ep.slug}`} class="fav-item">
                {ep.data.image
                  ? <img src={ep.data.image} alt={ep.data.title} class="fav-thumb" loading="lazy" />
                  : <div class="fav-thumb-placeholder">üéôÔ∏è</div>
                }
                <div class="fav-info">
                  <span class="fav-title">{ep.data.title}</span>
                  <span class="fav-date">{new Date(ep.data.pubDate).toLocaleDateString('es-ES', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
                </div>
                <svg class="fav-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"/></svg>
              </a>
            ))}
            {favCount > 6 && (
              <div class="fav-more">+{favCount - 6} episodios m√°s guardados</div>
            )}
          </div>
        )}
      </section>

      <!-- ‚îÄ‚îÄ LIKED CLIPS WIDGET ‚îÄ‚îÄ -->
      <section class="glass-card clips-card" id="clips">
        <div class="card-header">
          <div class="card-title-group">
            <span class="card-icon">üé¨</span>
            <h2>Clips Favoritos</h2>
          </div>
          <div class="card-badge">{likedClipsCount}</div>
        </div>

        {likedClipIds.length === 0 ? (
          <div class="empty-state">
            <span class="empty-icon">üéûÔ∏è</span>
            <p>Sin clips guardados a√∫n</p>
          </div>
        ) : (
          <div class="clips-grid">
            {likedClipIds.map((clipId) => (
              <a
                href={`https://www.youtube.com/watch?v=${clipId}`}
                target="_blank"
                rel="noopener noreferrer"
                class="clip-card"
              >
                <div class="clip-thumb-wrap">
                  <img
                    src={`https://i.ytimg.com/vi/${clipId}/hqdefault.jpg`}
                    alt="Clip de Veredillas FM"
                    class="clip-thumb"
                    loading="lazy"
                  />
                  <div class="clip-play-overlay">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="white"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}
        {likedClipsCount > 0 && (
          <a href="/clips" class="see-all-link">Ver todos los clips ‚Üí</a>
        )}
      </section>

      <!-- ‚îÄ‚îÄ STATS MINI-WIDGET ‚îÄ‚îÄ -->
      <section class="glass-card stats-mini-card" id="estadisticas">
        <div class="card-header">
          <div class="card-title-group">
            <span class="card-icon">üìä</span>
            <h2>Estad√≠sticas</h2>
          </div>
        </div>

        <div class="stat-rows">
          <div class="stat-row">
            <div class="stat-row-icon">‚è±Ô∏è</div>
            <div class="stat-row-label">Tiempo total escuchado</div>
            <div class="stat-row-value">{formatTime(listeningTime)}</div>
          </div>
          <div class="stat-row">
            <div class="stat-row-icon">‚úÖ</div>
            <div class="stat-row-label">Episodios completados</div>
            <div class="stat-row-value">{completedCount}</div>
          </div>
          <div class="stat-row">
            <div class="stat-row-icon">‚ù§Ô∏è</div>
            <div class="stat-row-label">Episodios favoritos</div>
            <div class="stat-row-value">{favCount}</div>
          </div>
          <div class="stat-row">
            <div class="stat-row-icon">üé¨</div>
            <div class="stat-row-label">Clips con Me Gusta</div>
            <div class="stat-row-value">{likedClipsCount}</div>
          </div>
          <div class="stat-row">
            <div class="stat-row-icon">üèÖ</div>
            <div class="stat-row-label">Logros desbloqueados</div>
            <div class="stat-row-value">{unlockedAchievements.length}</div>
          </div>
          <div class="stat-row">
            <div class="stat-row-icon">‚≠ê</div>
            <div class="stat-row-label">Puntos totales</div>
            <div class="stat-row-value stat-gold">{totalPoints}</div>
          </div>
          <div class="stat-row">
            <div class="stat-row-icon">üìÖ</div>
            <div class="stat-row-label">D√≠as en comunidad</div>
            <div class="stat-row-value">{daysSinceJoin}</div>
          </div>
        </div>
      </section>

      <!-- ‚îÄ‚îÄ RARITY BREAKDOWN ‚îÄ‚îÄ -->
      {unlockedAchievements.length > 0 && (
        <section class="glass-card rarity-card" id="rareza">
          <div class="card-header">
            <div class="card-title-group">
              <span class="card-icon">üíé</span>
              <h2>Logros por Rareza</h2>
            </div>
          </div>

          <div class="rarity-bars">
            {(['legendary','epic','rare','uncommon','common'] as const).map(rarity => {
              const count = unlockedAchievements.filter(a => a.rarity === rarity).length;
              const total = ACHIEVEMENTS.filter(a => a.rarity === rarity && !a.secret).length;
              const maxTotal = Math.max(total, 1);
              const pct = Math.round((count / maxTotal) * 100);
              const color = RARITY_COLORS[rarity];
              const label = RARITY_LABELS[rarity];
              return (
                <div class="rarity-row">
                  <span class="rarity-label" style={`color:${color}`}>{label}</span>
                  <div class="rarity-bar-track">
                    <div class="rarity-bar-fill" style={`width:${pct}%; background:${color}`}></div>
                  </div>
                  <span class="rarity-count">{count}/{total}</span>
                </div>
              );
            })}
          </div>
        </section>
      )}

    </div><!-- /.content-grid -->
 
    <!-- Back nav -->
    <div class="back-nav">
      <a href="/ep" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"/></svg>
        Explorar episodios
      </a>
      {!isOwner && (
        <span class="profile-note">Perfil p√∫blico de {user.name}</span>
      )}
    </div>

  </div>

  <!-- Achievement Modal -->
  <div id="ach-modal" class="modal-overlay" aria-hidden="true">
    <div class="modal-content-container">
      <div class="glass-modal">
        <button id="close-modal" class="modal-close" aria-label="Cerrar modal">&times;</button>
        <div class="modal-body">
          <div id="modal-icon" class="modal-ach-icon"></div>
          <h3 id="modal-name" class="modal-ach-name"></h3>
          <div id="modal-rarity" class="modal-ach-rarity"></div>
          <p id="modal-desc" class="modal-ach-desc"></p>
          <div class="modal-ach-meta">
            <div class="meta-item">
              <span class="meta-label">Puntos</span>
              <span id="modal-pts" class="meta-value pts-value"></span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Categor√≠a</span>
              <span id="modal-category" class="meta-value"></span>
            </div>
            <div id="modal-date-wrapper" class="meta-item">
              <span class="meta-label">Desbloqueado</span>
              <span id="modal-unlocked" class="meta-value"></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    function initAchModal() {
      const modal = document.getElementById('ach-modal');
      const closeBtn = document.getElementById('close-modal');
      const achChips = document.querySelectorAll('.ach-chip');

      if (!modal || !closeBtn) return;

      const openModal = (chip) => {
        try {
          const ach = JSON.parse(chip.dataset.ach);
          
          document.getElementById('modal-icon').textContent = ach.icon || 'üèÖ';
          document.getElementById('modal-name').textContent = ach.name || 'Logro';
          
          const rarityEl = document.getElementById('modal-rarity');
          rarityEl.textContent = ach.rarityLabel || 'Desconocido';
          rarityEl.style.color = ach.rarityColor || 'inherit';
          
          document.getElementById('modal-desc').textContent = ach.description || '';
          document.getElementById('modal-pts').textContent = ach.points > 0 ? `+${ach.points}` : '0';
          document.getElementById('modal-category').textContent = ach.categoryLabel || 'General';
          
          const dateWrapper = document.getElementById('modal-date-wrapper');
          if (ach.unlockedAt) {
            const date = new Date(ach.unlockedAt);
            document.getElementById('modal-unlocked').textContent = date.toLocaleDateString('es-ES', { 
              day: 'numeric', 
              month: 'long', 
              year: 'numeric' 
            });
            dateWrapper.style.display = 'flex';
          } else {
            dateWrapper.style.display = 'none';
          }

          modal.classList.add('is-open');
          modal.setAttribute('aria-hidden', 'false');
          document.body.style.overflow = 'hidden';
        } catch (e) {
          console.error('Error parsing achievement data', e);
        }
      };

      const closeModal = () => {
        modal.classList.remove('is-open');
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      };

      achChips.forEach(chip => {
        chip.addEventListener('click', () => openModal(chip));
      });

      closeBtn.addEventListener('click', closeModal);
      modal.addEventListener('click', (e) => {
        if (e.target.id === 'ach-modal' || e.target.classList.contains('modal-content-container')) {
          closeModal();
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('is-open')) {
          closeModal();
        }
      });
    }

    // Initialize on page load and view transitions
    document.addEventListener('DOMContentLoaded', initAchModal);
    document.addEventListener('astro:page-load', initAchModal);
  </script>
</Layout>

<style>
  /* ‚îÄ‚îÄ Ambient BG ‚îÄ‚îÄ */
  .pub-bg {
    position: fixed;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }
  .pub-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
  }
  .pub-orb-1 {
    width: 700px; height: 700px;
    top: -200px; left: -150px;
    background: radial-gradient(circle, #7c3aed, transparent 70%);
    opacity: 0.15;
    animation: orbDrift 20s ease-in-out infinite alternate;
  }
  .pub-orb-2 {
    width: 600px; height: 600px;
    bottom: 0; right: -100px;
    background: radial-gradient(circle, #ec4899, transparent 70%);
    opacity: 0.13;
    animation: orbDrift 25s ease-in-out infinite alternate-reverse;
  }
  .pub-orb-3 {
    width: 400px; height: 400px;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle, #0ea5e9, transparent 70%);
    opacity: 0.07;
    animation: orbPulse 14s ease-in-out infinite;
  }
  @keyframes orbDrift {
    from { transform: translate(0, 0) scale(1); }
    to   { transform: translate(40px, 30px) scale(1.1); }
  }
  @keyframes orbPulse {
    0%,100% { transform: translate(-50%,-50%) scale(1); opacity: 0.05; }
    50%      { transform: translate(-50%,-50%) scale(1.3); opacity: 0.1; }
  }
  .pub-grid {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* ‚îÄ‚îÄ Page ‚îÄ‚îÄ */
  .pub-page {
    position: relative;
    z-index: 1;
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1.5rem 6rem;
  }

  /* ‚îÄ‚îÄ Hero Banner ‚îÄ‚îÄ */
  .hero-banner {
    background: rgba(12, 12, 18, 0.75);
    border: 1px solid rgba(255,255,255,0.08);
    backdrop-filter: blur(28px);
    -webkit-backdrop-filter: blur(28px);
    border-radius: 28px;
    padding: 2.5rem;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
    animation: slideInDown 0.7s cubic-bezier(0.22,1,0.36,1) both;
  }
  .hero-banner::before {
    content: '';
    position: absolute; inset: 0;
    background: linear-gradient(135deg, rgba(124,58,237,0.08), rgba(236,72,153,0.05));
