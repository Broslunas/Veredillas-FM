---
import Layout from '../layouts/Layout.astro';
import dbConnect from '../lib/mongodb';
import Comment from '../models/Comment';

export const prerender = false;

const token = Astro.url.searchParams.get('token');
let success = false;
let message = '';
let slug = '/';

if (token) {
  try {
    await dbConnect();
    // Use select('+deletionToken') because it is deselected by default
    const comment = await Comment.findOne({ deletionToken: token }).select('+deletionToken');

    if (comment) {
      // Actually delete the document
      await comment.deleteOne();
      
      success = true;
      message = 'Tu comentario ha sido eliminado correctamente.';
      slug = `/ep/${comment.slug}`; // Redirect back to episode
    } else {
      message = 'El enlace de eliminaci√≥n es inv√°lido o ya ha sido usado.';
    }
  } catch (error) {
    console.error(error);
    message = 'Ocurri√≥ un error al intentar eliminar el comentario.';
  }
} else {
  message = 'No se proporcion√≥ ning√∫n token de eliminaci√≥n.';
}
---

<Layout title="Eliminar Comentario">
  <main class="verify-container">
    <div class="verify-card">
      <div class="icon">
        {success ? 'üóëÔ∏è' : '‚ùå'}
      </div>
      <h1>{success ? '¬°Eliminado!' : 'Error'}</h1>
      <p>{message}</p>
      
      {success ? (
        <a href={slug} class="btn btn-primary">Volver al episodio</a>
      ) : (
        <a href="/" class="btn btn-secondary">Volver al inicio</a>
      )}
    </div>
  </main>
</Layout>

<style>
  .verify-container {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .verify-card {
