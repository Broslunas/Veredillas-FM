<Layout 
  title="Nuestro Equipo"
  description="Conoce a las personas que hacen posible Veredillas FM. Estudiantes apasionados por la comunicación, la tecnología y la creatividad."
  image="/logo.png"
>
    <div class="container page-wrapper">
        <header class="page-header gs-reveal">
            <span class="badge">El Equipo</span>
            <h1>Caras detrás de <br><span class="text-gradient">la Voz</span></h1>
            <p class="subtitle">
                Somos un grupo diverso de estudiantes del IES Veredillas unidos por una misma pasión: conectar con nuestra comunidad a través del audio.
            </p>
        </header>

        <div class="team-grid gs-reveal">
            {allMembers.map((member, index) => (
                <article 
                    class="member-card glass-panel" 
                    data-member={JSON.stringify(member)}
                    role="button"
                    tabindex="0"
                    aria-label={`Ver información de ${member.name}`}
                >
                    <div class="card-overlay"></div>
                    <div class="image-wrapper">
                        <img src={member.image} alt={member.name} loading={index < 3 ? "eager" : "lazy"} />
                    </div>
                    <div class="member-info">
                        <h3>{member.name}</h3>
                        <div class="role-badge">{member.role}</div>
                        <p class="click-hint">Clic para más info</p>
                    </div>
                </article>
            ))}
        </div>

        <!-- Join CTA -->
        <section class="join-cta glass-panel gs-reveal">
            <div class="cta-content">
                <h2>¿Quieres formar parte?</h2>
                <p>Siempre buscamos nuevas voces, guionistas, técnicos y creativos. Si eres alumno del Veredillas, ¡te estamos esperando!</p>
                <a href="/contacto" class="btn btn-primary">Únete al equipo</a>
            </div>
            <div class="cta-decoration">
                <svg width="200" height="200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="mic-icon"><path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/><line x1="8" x2="16" y1="22" y2="22"/></svg>
            </div>
        </section>
    </div>

    <!-- Member Modal -->
    <dialog id="member-modal" class="modal-dialog">
        <div class="modal-content glass-panel">
            <button id="close-modal" class="close-btn" aria-label="Cerrar">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
            </button>
            
            <div class="modal-body">
                <div class="modal-image-col">
                    <img id="modal-img" src="" alt="" />
                </div>
                <div class="modal-info-col">
                    <span id="modal-dept" class="modal-badge"></span>
                    <h2 id="modal-name"></h2>
                    <h3 id="modal-role"></h3>
                    <p id="modal-bio"></p>
                    
                    <div id="modal-links" class="social-links-container">
                        <!-- Links injected via JS -->
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-backdrop"></div>
    </dialog>

</Layout>

<script>
    import { gsap } from "gsap";
    
    document.addEventListener('astro:page-load', () => {
        // Animation
        gsap.from(".gs-reveal", {
            y: 30,
            opacity: 0,
            duration: 0.8,
            stagger: 0.2,
            ease: "power2.out"
        });

        // Modal Logic
        const modal = document.getElementById('member-modal') as HTMLDialogElement;
        const closeBtn = document.getElementById('close-modal');
        const cards = document.querySelectorAll('.member-card');

        // Elements to update
        const mImg = document.getElementById('modal-img') as HTMLImageElement;
        const mName = document.getElementById('modal-name');
        const mRole = document.getElementById('modal-role');
        const mDept = document.getElementById('modal-dept');
        const mBio = document.getElementById('modal-bio');
        const mLinks = document.getElementById('modal-links');

        function openModal(data) {
            if(!modal) return;
            
            // Populate data
            if(mImg) mImg.src = data.image;
            if(mImg) mImg.alt = data.name;
            if(mName) mName.textContent = data.name;
            if(mRole) mRole.textContent = data.role;
            if(mDept) mDept.textContent = data.department || 'Equipo';
            if(mBio) mBio.textContent = data.bio || '';
            
            if(mLinks) {
                mLinks.innerHTML = '';
                if(data.links && Array.isArray(data.links)) {
                    data.links.forEach((linkItem) => {
                        const link = document.createElement('a');
                        link.href = linkItem.url;
                        link.target = '_blank';
                        link.rel = 'noopener noreferrer';
                        link.className = 'modal-social-link';
                        
                        let iconSvg = '';
                        // Simple icon selection based on label
                        const labelLower = linkItem.label.toLowerCase();
                        if(labelLower.includes('instagram')) {
                             iconSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>';
                        } else if(labelLower.includes('web') || labelLower.includes('site')) {
                             iconSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>';
                        } else {
                             // Default arrow icon
                             iconSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>';
                        }

                        link.innerHTML = `
                            <span>${linkItem.label}</span>
                            ${iconSvg}
                        `;
                        mLinks.appendChild(link);
                    });
                }
            }

            modal.showModal();
            document.body.style.overflow = 'hidden'; 
        }

        function closeModal() {
            if(!modal) return;
            modal.close();
            document.body.style.overflow = '';
        }

        cards.forEach(card => {
            card.addEventListener('click', () => {
                const dataRaw = (card as HTMLElement).dataset.member;
                if(dataRaw) {
                    const data = JSON.parse(dataRaw);
                    openModal(data);
                }
            });

            // Keyboard a11y
            card.addEventListener('keydown', (e: any) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    const dataRaw = (card as HTMLElement).dataset.member;
                    if(dataRaw) {
                        const data = JSON.parse(dataRaw);
                        openModal(data);
                    }
                }
            });
        });

        if(closeBtn) closeBtn.addEventListener('click', closeModal);
        
        modal?.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });
        
        // Handle cancel event (Esc key) to clean up overflow
        modal?.addEventListener('cancel', () => {
             document.body.style.overflow = '';
        });
    });
</script>

<style>
    .page-wrapper {
        padding: 4rem var(--spacing-md);
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 5rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        background: rgba(139, 92, 246, 0.1);
        color: var(--color-primary);
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(139, 92, 246, 0.2);
    }

    h1 {
        font-size: clamp(3rem, 5vw, 4.5rem);
        line-height: 1.1;
        margin-bottom: 1.5rem;
        font-weight: 800;
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    /* Grid Layout */
    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2.5rem;
        margin-bottom: 6rem;
    }

    .member-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 3rem 2rem;
        border-radius: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1.5rem;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
        opacity: 1;
        overflow: hidden;
    }
    
    .member-card:hover {
        transform: translateY(-8px) scale(1.02);
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    }

    .image-wrapper {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid rgba(255,255,255,0.1);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }

    .member-card:hover .image-wrapper {
        border-color: var(--color-primary);
        transform: scale(1.05);
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .member-info h3 {
        font-size: 1.6rem;
        margin-bottom: 0.75rem;
        font-weight: 800;
        color: var(--color-text-main);
    }

    .role-badge {
        display: inline-block;
        font-size: 0.95rem;
        color: var(--color-primary);
        background: rgba(139, 92, 246, 0.1);
        padding: 0.5rem 1.2rem;
        border-radius: 50px;
        margin-bottom: 0.5rem;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .click-hint {
        font-size: 0.8rem;
        color: var(--color-text-muted);
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.3s;
        margin-top: auto;
    }

    .member-card:hover .click-hint {
        opacity: 0.8;
        transform: translateY(0);
    }

    /* Modal Styles */
    .modal-dialog {
        padding: 0;
        border: none;
        background: transparent;
        border-radius: 24px;
        max-width: 900px;
        width: 90%;
        margin: auto;
        color: inherit;
        opacity: 0;
        transform: scale(0.9);
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .modal-dialog[open] {
        opacity: 1;
        transform: scale(1);
    }

    .modal-dialog::backdrop {
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
    }

    .modal-content {
        display: grid;
        grid-template-columns: 350px 1fr;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
        background: #18181b; 
        box-shadow: 0 0 50px rgba(0,0,0,0.5);
    }
    
    .modal-body {
        display: contents;
    }

    .close-btn {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: rgba(0,0,0,0.3);
        border: none;
        color: white;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background 0.2s;
        z-index: 10;
        backdrop-filter: blur(4px);
    }

    .close-btn:hover {
        background: rgba(255,255,255,0.2);
    }

    .modal-image-col {
        height: 100%;
        min-height: 450px;
        position: relative;
    }

    .modal-image-col img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        inset: 0;
    }

    .modal-info-col {
        padding: 3.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .modal-badge {
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 0.85rem;
        color: var(--color-primary);
        font-weight: 700;
        margin-bottom: 1rem;
        display: block;
    }

    #modal-name {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        line-height: 1.1;
        background: linear-gradient(to right, #fff, #ccc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    #modal-role {
        font-size: 1.4rem;
        color: var(--color-text-muted);
        margin-bottom: 2.5rem;
        font-weight: 400;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding-bottom: 1.5rem;
        display: inline-block;
    }

    #modal-bio {
        font-size: 1.15rem;
        line-height: 1.7;
        color: rgba(255,255,255,0.9);
        margin-bottom: 3rem;
    }

    .social-links-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .modal-social-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.8rem 1.8rem;
        background: var(--color-primary);
        color: white;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
    }

    .modal-social-link:hover {
        background: var(--color-primary-dark);
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(139, 92, 246, 0.5);
    }

    /* CTA Styles */
    .join-cta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 4rem;
        border-radius: 30px;
        position: relative;
        overflow: hidden;
        margin-top: 4rem;
        background: radial-gradient(circle at right bottom, rgba(139, 92, 246, 0.15), rgba(255, 255, 255, 0.02));
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .cta-content {
        max-width: 500px;
        position: relative;
        z-index: 2;
    }

    .cta-content h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .cta-content p {
        color: var(--color-text-muted);
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }

    .cta-decoration {
        position: absolute;
        right: -20px;
        bottom: -40px;
        opacity: 0.05;
        transform: rotate(-15deg);
        pointer-events: none;
    }
    
    .mic-icon {
        width: 300px;
        height: 300px;
    }

    @media (max-width: 900px) {
        .modal-content {
            grid-template-columns: 1fr;
            max-height: 85vh;
            overflow-y: auto;
        }

        .modal-image-col {
            height: 300px;
            min-height: auto;
        }
        
        .modal-info-col {
            padding: 2rem;
        }

        #modal-name {
            font-size: 2rem;
        }
    }

    @media (max-width: 768px) {
        .join-cta {
            flex-direction: column;
            text-align: center;
            padding: 3rem 1.5rem;
        }
        
        .team-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }
    }
</style>
