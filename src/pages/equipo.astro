---
import Layout from '../layouts/Layout.astro';
import { teamMembers as allMembers } from '../data/team';

// Helper for slugify (must match other files)
function slugify(text: string) {
  return text
    .toLowerCase()
    .trim()
    .normalize("NFD").replace(/[\u0300-\u036f]/g, "")
    .replace(/\s+/g, '-')
    .replace(/[^\w-]+/g, '');
}
---

<Layout 
  title="Nuestro Equipo"
  description="Conoce a las personas que hacen posible Veredillas FM. Estudiantes apasionados por la comunicación, la tecnología y la creatividad."
  image="/logo.png"
>
    <!-- Background Decor -->
    <div class="page-bg"></div>

    <div class="container page-wrapper">
        <header class="page-header gs-reveal">
            <span class="badge">El Equipo</span>
            <h1>Caras detrás de <br><span class="text-gradient">la Voz</span></h1>
            <p class="subtitle">
                Somos un grupo diverso de estudiantes del IES Veredillas unidos por una misma pasión: conectar con nuestra comunidad a través del audio.
            </p>
        </header>

        <div class="team-grid gs-reveal">
            {allMembers.map((member, index) => (
                <a 
                    href={`/equipo/${slugify(member.name)}`}
                    class="member-card" 
                    aria-label={`Ver perfil de ${member.name}`}
                >
                    <div class="card-inner glass-panel">
                        <div class="image-box">
                            <img 
                                src={member.image} 
                                alt={member.name} 
                                loading={index < 3 ? "eager" : "lazy"} 
                            />
                        </div>
                        <div class="info-box">
                            <h3>{member.name}</h3>
                            <span class="role">{member.role}</span>
                        </div>
                        <div class="hover-status">
                            <span>Ver Perfil Completo</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                        </div>
                    </div>
                </a>
            ))}
        </div>

        <!-- Join CTA -->
        <section class="join-cta glass-panel gs-reveal">
            <div class="cta-content">
                <h2>¿Quieres formar parte?</h2>
                <p>Siempre buscamos nuevas voces, guionistas, técnicos y creativos. Si eres alumno del Veredillas, ¡te estamos esperando!</p>
                <a href="/contacto" class="btn btn-primary">Únete al equipo</a>
            </div>
            <div class="cta-decoration">
                <svg width="200" height="200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="mic-icon"><path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/><line x1="8" x2="16" y1="22" y2="22"/></svg>
            </div>
        </section>
    </div>

    <script>
        import { gsap } from "gsap";
        
        document.addEventListener('astro:page-load', () => {
            gsap.from(".gs-reveal", {
                y: 30,
                opacity: 0,
                duration: 0.8,
                stagger: 0.15,
                ease: "power2.out"
            });
        });
    </script>
</Layout>

<style>
    .page-bg {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100vh;
        background: radial-gradient(circle at 50% 0%, rgba(139, 92, 246, 0.08), transparent 60%);
        z-index: -1;
        pointer-events: none;
    }

    .page-wrapper {
        padding: 6rem var(--spacing-md);
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 5rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        background: rgba(139, 92, 246, 0.1);
        color: var(--color-primary);
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(139, 92, 246, 0.2);
    }

    h1 {
        font-size: clamp(3rem, 6vw, 4.5rem);
        line-height: 1;
        margin-bottom: 1.5rem;
        font-weight: 800;
        letter-spacing: -0.02em;
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    /* Grid Layout */
    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        margin-bottom: 6rem;
    }

    .member-card {
        text-decoration: none;
        color: inherit;
        display: block;
        perspective: 1000px;
    }

    .card-inner {
        position: relative;
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 20px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        height: 100%;
    }

    .member-card:hover .card-inner {
        transform: translateY(-8px);
        background: rgba(255,255,255,0.06);
        border-color: rgba(255,255,255,0.15);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .image-box {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 1.5rem;
        border: 4px solid rgba(255,255,255,0.1);
        transition: border-color 0.3s, transform 0.3s;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

    .member-card:hover .image-box {
        border-color: var(--color-primary);
        transform: scale(1.05);
    }

    .image-box img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .info-box h3 {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--color-text-main);
    }

    .info-box .role {
        font-size: 0.95rem;
        color: var(--color-text-muted);
        display: block;
        margin-bottom: 2rem;
        font-weight: 500;
    }

    .hover-status {
        margin-top: auto;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-primary);
        font-weight: 600;
        font-size: 0.9rem;
        opacity: 0.6;
        transform: translateY(5px);
        transition: all 0.3s;
    }

    .member-card:hover .hover-status {
        opacity: 1;
        transform: translateY(0);
    }

    /* CTA Styles */
    .join-cta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 4rem;
        border-radius: 30px;
        position: relative;
        overflow: hidden;
        margin-top: 4rem;
        background: radial-gradient(circle at right bottom, rgba(139, 92, 246, 0.15), rgba(255, 255, 255, 0.02));
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .cta-content {
        max-width: 500px;
        position: relative;
        z-index: 2;
    }

    .cta-content h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .cta-content p {
        color: var(--color-text-muted);
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }

    .cta-decoration {
        position: absolute;
        right: -20px;
        bottom: -40px;
        opacity: 0.05;
        transform: rotate(-15deg);
        pointer-events: none;
    }
    
    .mic-icon {
        width: 300px;
        height: 300px;
    }

    @media (max-width: 768px) {
        .join-cta {
            flex-direction: column;
            text-align: center;
            padding: 3rem 1.5rem;
        }
        
        .team-grid {
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 1.5rem;
        }
    }
</style>
