---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const episodes = await getCollection('episodios');
  return episodes.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formattedDate = entry.data.pubDate.toLocaleDateString('es-ES', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<Layout title={entry.data.title} description={entry.data.description}>
    <article class="episode-article">
        <!-- Header -->
        <header class="article-header container">
            <div class="meta-row">
                <span class="date">{formattedDate}</span>
                <span class="dot">•</span>
                <span class="author">{entry.data.author}</span>
            </div>
            
            <h1>{entry.data.title}</h1>
            <p class="lead">{entry.data.description}</p>
        </header>

        {entry.data.image && (
            <div class="featured-image container">
                <img src={entry.data.image} alt={entry.data.title} class="hero-image" />
            </div>
        )}

        <!-- Player -->
        <div class="player-container container">
            {entry.data.spotifyUrl && (
                <div class="play-trigger-wrapper glass-panel">
                     <button class="play-trigger-btn" data-spotify-url={entry.data.spotifyUrl}>
                        <span class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                        </span>
                        <span class="text">Escuchar Episodio</span>
                    </button>
                    <p class="play-note">Reproducir en mini-player continuo</p>
                </div>
            )}
        </div>

        <!-- Content -->
        <div class="content-container container">
            <div class="content-body">
                <Content />
            </div>
            
            <div class="sidebar">
                <div class="sidebar-widget">
                    <h3>Detalles</h3>
                    <ul class="details-list">
                        <li>
                            <strong>Temporada:</strong> {entry.data.season}
                        </li>
                        <li>
                            <strong>Episodio:</strong> {entry.data.episode}
                        </li>
                        <li>
                            <strong>Duración:</strong> {entry.data.duration}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </article>
</Layout>

<script>
    document.addEventListener('astro:page-load', () => {
        const btns = document.querySelectorAll('.play-trigger-btn');
        btns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                const target = e.currentTarget as HTMLElement;
                const url = target.getAttribute('data-spotify-url');
                if(url) {
                    document.dispatchEvent(new CustomEvent('play-episode', { detail: { url } }));
                }
            });
        });
    });
</script>

<style>
    .article-header {
        padding: var(--spacing-2xl) var(--spacing-md) var(--spacing-lg);
        text-align: center;
        max-width: 900px;
    }

    .meta-row {
        color: var(--color-text-muted);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: var(--spacing-md);
    }

    .dot { margin: 0 var(--spacing-sm); }

    h1 {
        font-size: clamp(2rem, 4vw, 3.5rem);
        margin-bottom: var(--spacing-md);
        line-height: 1.1;
    }

    .lead {
        font-size: 1.25rem;
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    .featured-image {
        margin-bottom: var(--spacing-xl);
        border-radius: var(--radius-lg);
        overflow: hidden;
        max-width: 1000px;
    }

    .hero-image {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
    }

    .player-container {
        max-width: 800px;
        margin-bottom: var(--spacing-2xl);
    }
    
    .play-trigger-wrapper {
        padding: var(--spacing-xl);
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
        border-radius: var(--radius-lg);
    }
    
    .play-trigger-btn {
        background: var(--color-primary);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: var(--radius-full);
        font-size: 1.25rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px var(--color-primary-glow);
    }
    
    .play-trigger-btn:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 8px 30px var(--color-primary-glow);
    }
    
    .play-note {
        font-size: 0.9rem;
        color: var(--color-text-muted);
        opacity: 0.8;
    }

    .content-container {
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: var(--spacing-2xl);
        max-width: 1000px;
        padding-bottom: var(--spacing-2xl);
    }

    .content-body {
        font-size: 1.125rem;
        color: var(--color-text-main);
    }

    /* Markdown Styles */
    .content-body :global(h2) {
        font-size: 1.75rem;
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-md);
        color: var(--color-text-main);
    }

    .content-body :global(p) {
        margin-bottom: var(--spacing-md);
        line-height: 1.7;
    }

    .content-body :global(ul), .content-body :global(ol) {
        margin-bottom: var(--spacing-md);
        padding-left: var(--spacing-lg);
    }
    
    .content-body :global(li) {
        margin-bottom: var(--spacing-sm);
    }

    /* Sidebar */
    .sidebar-widget {
        background: var(--color-surface);
        padding: var(--spacing-lg);
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
    }

    .sidebar-widget h3 {
        margin-bottom: var(--spacing-md);
        font-size: 1.25rem;
    }

    .details-list {
        list-style: none;
    }

    .details-list li {
        display: flex;
        justify-content: space-between;
        padding: var(--spacing-sm) 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .details-list li:last-child {
        border-bottom: none;
    }
    
    .details-list strong {
        color: var(--color-text-muted);
    }

    @media (max-width: 768px) {
        .content-container {
            grid-template-columns: 1fr;
        }
        
        .sidebar {
            order: -1; 
            margin-bottom: var(--spacing-lg);
        }
    }
</style>
