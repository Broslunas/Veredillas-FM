<style>
    .login-container {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    .login-wrapper {
        width: 100%;
        max-width: 1100px; /* Wider for 2 cols */
        background: rgba(15, 15, 20, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        padding: 4rem;
        border-radius: 2rem;
        position: relative;
        overflow: hidden;
        
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    /* Mobile */
    @media (max-width: 900px) {
        .login-wrapper {
            grid-template-columns: 1fr;
            text-align: center;
            padding: 2rem;
            gap: 3rem;
        }
        
        .login-left-col {
            padding-right: 0;
            border-right: none;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            padding-bottom: 2rem;
        }
        
        .login-header .logo-circle {
            margin-left: auto;
            margin-right: auto;
        }
    }

    /* Top decorative glow */
    .login-wrapper::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
        opacity: 0.5;
    }

    /* Left Column */
    .login-left-col {
        padding-right: 2rem;
    }

    .login-header {
        margin-bottom: 2.5rem;
    }

    .logo-circle {
        width: 60px;
        height: 60px;
        margin-bottom: 1.5rem;
        background: black;
        border-radius: 50%;
        padding: 5px;
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 30px rgba(139, 92, 246, 0.3);
    }

    .logo-circle img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        line-height: 1.1;
        background: linear-gradient(to right, #fff, #a1a1aa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .login-header p {
        color: var(--color-text-muted);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .features-grid {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Always 2 cols on desktop/tablet */
        gap: 1.5rem;
        text-align: left;
    }
    
    @media (max-width: 640px) {
        .features-grid {
            grid-template-columns: 1fr; /* Stack on small mobile */
        }
    }

    .feature-item {
        background: rgba(255, 255, 255, 0.03);
        padding: 1rem;
        border-radius: 1rem;
        display: flex;
        flex-direction: column; /* Stack icon top */
        gap: 0.75rem;
        align-items: flex-start;
        border: 1px solid transparent;
        transition: all 0.2s;
    }
    
    .feature-item:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .feature-icon {
        font-size: 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
    }

    .feature-text h3 {
        font-size: 0.95rem;
        margin-bottom: 0.25rem;
        color: var(--color-text-main);
    }

    .feature-text p {
        font-size: 0.8rem;
        color: var(--color-text-muted);
        line-height: 1.4;
    }

    /* Right Column - Login Card */
    .login-right-col {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .login-card {
        background: rgba(0,0,0,0.3);
        padding: 2.5rem;
        border-radius: 1.5rem;
        border: 1px solid rgba(255,255,255,0.05);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    .login-card h2 {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }
    
    .login-sub {
        color: var(--color-text-muted);
        margin-bottom: 2rem;
    }

    .btn-google {
        background: white;
        color: #1f1f1f;
        border: none;
        width: 100%;
        margin: 0 auto;
        gap: 0.75rem;
        font-size: 1rem;
        padding: 1rem;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-google:hover {
        background: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .terms-note {
        margin-top: 1.5rem;
        font-size: 0.8rem;
        color: var(--color-text-dim);
    }

    .terms-note a {
        color: var(--color-text-muted);
        text-decoration: underline;
    }
    
    .terms-note a:hover {
        color: var(--color-primary);
    }

    /* Background blobs */
    .blob {
        position: absolute;
        width: 500px;
        height: 500px;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.3;
    }
    
    .blob-1 {
        top: -100px;
        left: -100px;
        background: radial-gradient(circle, var(--color-primary), transparent);
        animation: blob-float 10s infinite alternate;
    }
    
    .blob-2 {
        bottom: -100px;
        right: -100px;
        background: radial-gradient(circle, var(--color-secondary), transparent);
        animation: blob-float 12s infinite alternate-reverse;
    }

    @keyframes blob-float {
        0% { transform: translate(0, 0); }
        100% { transform: translate(50px, 50px); }
    }
</style>

<script>
    function openGoogleLogin(e: Event) {
        e.preventDefault();
        const width = 500;
        const height = 600;
        const left = (window.innerWidth - width) / 2 + window.screenLeft;
        const top = (window.innerHeight - height) / 2 + window.screenTop;
        
        window.open(
            '/api/auth/google/login',
            'google_login_popup',
            `width=${width},height=${height},top=${top},left=${left},status=no,menubar=no,toolbar=no`
        );
    }

    // Attach event listener safely
    document.addEventListener('DOMContentLoaded', () => {
        const btn = document.querySelector('.btn-google');
        if (btn) {
            btn.addEventListener('click', openGoogleLogin);
        }
    });
</script>
